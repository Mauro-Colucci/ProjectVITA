<%- include('./layout/header.ejs') %>             

<main>
    <div class="row mt-4">

      

      <div class="col-md-3">

        <% if (projectsPage || user.id == singleProject?.user._id) { %>
          <%- include('./partials/_myProjectsTable.ejs') %>             
        <% } %>


        <% if (typeof singleProject !== 'undefined') { %>
          <%- include('./partials/_projectImage.ejs') %> 
     
      </div>

      <div class="col-md-9">
        <% if (projectsPage || user.id == singleProject?.user._id) { %>
          <%- include('./partials/_projectsEditForm.ejs') %> 
        <% } else { %>
          <%- include('./partials/_projectsStaticForm.ejs') %> 
        <% } %>
        
      </div>

    </div>

    <div class="row mt-4">
  
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div class="wrapper">
                <h5 class="card-title">Project tasks</h5>
              </div>
  
            </div>
            <div class="table-responsive">
              <table id="myTable" class="table table-hover">
                <thead class="table-dark">
                  <tr>
                    <th scope="col" class="text-nowrap">Task name</th>
                    <th>Description</th>
                    <th>Priority</th>
                    <th>Type</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% singleProject.tasks.forEach(task => { %>
                    
                  <tr>
                      <td><a href="/task/singleTask/<%= task._id %>" class="text-nowrap text-decoration-none text-reset"><%= task.taskName %></a></td>
                      <td><%= task.description %></td>
                      
                      <%- include('./partials/_priorityInput.ejs',{input: task.priority}) %> 
                      
                      <td class="text-nowrap"><%= task.tag %> </td>
                      <td><%= task.status %> </td>
                  </tr>
  
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
          
        </div>
      </div>
    </div>

    <% } %>
  </main>


<%- include('./layout/footer.ejs', rowsShown=true) %> 