<div class="card mb-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <div class="wrapper">
          <h5 class="card-title"><%= page %></h5>
        </div>
        <% if (page === 'My Projects') { %>
          <%- include('./_formModal.ejs', {text: "+"}) %>
        <% } %>
      </div>
      <div class="table-responsive">
        <table id="mySmallTable" class="table table-hover">
          <thead class="table-dark">
            <tr>
              <th class="text-nowrap">Project name</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(project => { %>
             
            <tr>
                <td>
                  <div class="d-flex align-items-center justify-content-between">
                    <a href="/project/<%= project._id %>" class="text-nowrap text-decoration-none text-reset"><%= project.projectName %></a>
                    <% if (project.user == loggedUser.id || loggedUser.isAdmin) { %>
                      <form action="/project/deleteProject/<%= project._id %>?_method=DELETE" method="POST">
                        <button class="btn p-0" type="submit"><i class="bx bx-minus-circle" style="color: tomato;"></i></button>
                      </form>
                    <% } %>      
                  </div>
              
                </td>

            </tr>

            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
</div>